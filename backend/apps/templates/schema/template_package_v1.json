{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://rims.local/schemas/template_package_v1.json",
    "title": "TemplatePackage v1",
    "type": "object",
    "required": [
        "code",
        "name",
        "sections"
    ],
    "additionalProperties": false,
    "properties": {
        "code": {
            "type": "string",
            "pattern": "^[A-Z0-9_]+$",
            "description": "Unique identifier for the template family. Uppercase, numbers, underscores only."
        },
        "name": {
            "type": "string",
            "minLength": 3
        },
        "category": {
            "type": "string"
        },
        "version_note": {
            "type": "string"
        },
        "language": {
            "type": "string",
            "pattern": "^[a-z]{2}$",
            "default": "en"
        },
        "service_mappings": {
            "type": "array",
            "items": {
                "type": "string",
                "description": "Service code to map this template to"
            }
        },
        "sections": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "title",
                    "fields"
                ],
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "order": {
                        "type": "integer"
                    },
                    "fields": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "key",
                                "label",
                                "type"
                            ],
                            "properties": {
                                "key": {
                                    "type": "string",
                                    "pattern": "^[a-z0-9_]+$"
                                },
                                "label": {
                                    "type": "string"
                                },
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "short_text",
                                        "long_text",
                                        "number",
                                        "boolean",
                                        "dropdown",
                                        "checklist",
                                        "heading",
                                        "separator"
                                    ]
                                },
                                "required": {
                                    "type": "boolean",
                                    "default": false
                                },
                                "help_text": {
                                    "type": "string"
                                },
                                "placeholder": {
                                    "type": "string"
                                },
                                "unit": {
                                    "type": "string"
                                },
                                "options": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "required": [
                                            "label",
                                            "value"
                                        ],
                                        "properties": {
                                            "label": {
                                                "type": "string"
                                            },
                                            "value": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                },
                                "rules": {
                                    "type": "object"
                                },
                                "na_allowed": {
                                    "type": "boolean"
                                },
                                "conditional_visibility": {
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}